<head>
    <script src="assets\javascripts\jquery-3.3.1.min.js" type="text/javascript"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Nunito" rel="stylesheet"> 
</head>

<div class="log-in-form">
<h2 style="font-family: 'Nunito', sans-serif; font-size: 60pt;">Login</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, :class => 'newlabel'%>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class =>'form-control formx' %>
  </div>

  <div class="field">
    <%= f.label :password, :class => 'newlabel' %>
    <%= f.password_field :password, autocomplete: "off", :class =>'form-control formx' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", :class => 'btn btn-lg btn-secondary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
